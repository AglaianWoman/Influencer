<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MyCampDetails">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context=".RegistrationScreen1"
            android:layout_centerHorizontal="true"
            android:id="@+id/relativeLayout"
            android:scaleType="fitXY">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="STATUS UPDATES"
                android:textSize="30dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:id="@+id/title"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/title"
                android:id="@+id/relativeLayout1"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:scaleType="fitXY">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Applied Date      :"
                    android:textSize="20sp"
                    android:paddingLeft="35dp"
                    android:textColor="@color/black"
                    android:id="@+id/applydatetext"
                    android:layout_marginTop="40dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:textSize="20sp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/applydate"
                    android:textColor="@color/counter_text_bg"
                    android:layout_alignTop="@+id/applydatetext"
                    android:layout_toRightOf="@+id/applydatetext"
                    android:layout_toEndOf="@+id/applydatetext" />

                <View
                    android:id="@+id/line"
                    android:layout_width="290dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/applydate"
                    android:background="@color/ashe" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Applied Status   :"
                    android:textSize="20sp"
                    android:paddingLeft="35dp"
                    android:layout_below="@+id/line"
                    android:textColor="@color/black"
                    android:id="@+id/applystatustext"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:textSize="20sp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/applystatus"
                    android:textColor="@color/counter_text_bg"
                    android:layout_alignTop="@+id/applystatustext"
                    android:layout_toRightOf="@+id/applystatustext"
                    android:layout_toEndOf="@+id/applystatustext" />

                <View
                    android:id="@+id/lineone"
                    android:layout_width="290dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/applystatus"
                    android:background="@color/ashe" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Payment Status :"
                    android:textSize="20sp"
                    android:paddingLeft="35dp"
                    android:layout_below="@+id/lineone"
                    android:textColor="@color/black"
                    android:id="@+id/paymentstatustext"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:textSize="20sp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/paymentstatus"
                    android:textColor="@color/counter_text_bg"
                    android:layout_alignTop="@+id/paymentstatustext"
                    android:layout_toRightOf="@+id/paymentstatustext"
                    android:layout_toEndOf="@+id/paymentstatustext" />

                <View
                    android:id="@+id/linetwo"
                    android:layout_width="290dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/paymentstatus"
                    android:background="@color/ashe" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Delivery Status   :"
                    android:textSize="20sp"
                    android:paddingLeft="35dp"
                    android:layout_below="@+id/linetwo"
                    android:textColor="@color/black"
                    android:id="@+id/deliverystatustext"
                    android:layout_marginTop="15dp" />


                <Spinner
                    android:id="@+id/deliverystatus"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/deliverystatustext"
                    android:textSize="30dp"
                    android:layout_marginTop="12dp"
                    android:layout_alignLeft="@+id/updatebutton"
                    android:layout_alignStart="@+id/updatebutton"
                    android:layout_alignRight="@+id/linetwo"
                    android:layout_alignEnd="@+id/linetwo" />

                <View
                    android:id="@+id/linethree"
                    android:layout_width="290dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/deliverystatus"
                    android:background="@color/ashe" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Quote Amount : "
                    android:textSize="20sp"
                    android:paddingLeft="35dp"
                    android:layout_below="@+id/linethree"
                    android:textColor="@color/black"
                    android:id="@+id/campaignquotext"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:textSize="20sp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/campaignquote"
                    android:textColor="@color/counter_text_bg"
                    android:layout_alignTop="@+id/campaignquotext"
                    android:layout_toRightOf="@+id/campaignquotext"
                    android:layout_toEndOf="@+id/campaignquotext" />

                <View
                    android:id="@+id/linefour"
                    android:layout_width="290dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/campaignquote"
                    android:background="@color/ashe" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Blog Link   :"
                    android:textSize="20sp"
                    android:paddingLeft="35dp"
                    android:layout_below="@+id/linefour"
                    android:textColor="@color/black"
                    android:id="@+id/bloglinktext"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/bloglink"
                    android:layout_below="@+id/bloglinktext"
                    android:ems="12"
                    android:textColor="@color/counter_text_bg"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_corner"
                    android:layout_marginTop="15dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Twitter Link   :"
                    android:textSize="20sp"
                    android:paddingLeft="35dp"
                    android:layout_below="@+id/bloglink"
                    android:textColor="@color/black"
                    android:id="@+id/twitterlinktext"
                    android:layout_marginTop="15dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/twitterlink"
                    android:layout_below="@+id/twitterlinktext"
                    android:ems="12"
                    android:textColor="@color/counter_text_bg"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_corner"
                    android:layout_marginTop="15dp"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/updatebutton"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/twitterlink"
                    android:gravity="center"
                    android:text="Update"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:background="@drawable/rounded_corner_button"
                    android:layout_alignLeft="@+id/twitterlink"
                    android:layout_alignStart="@+id/twitterlink"
                    android:layout_alignRight="@+id/twitterlink"
                    android:layout_alignEnd="@+id/twitterlink" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dummy"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:layout_below="@+id/updatebutton" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cid"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/campid"
                android:visibility="invisible"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/campname"
                android:visibility="invisible"/>
        </RelativeLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>


