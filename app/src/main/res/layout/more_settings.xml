<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/settinglayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="@color/violet"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textSize="30sp"
                android:layout_marginTop="15dp"
                android:id="@+id/more_text" />

            <View
                android:id="@+id/line0"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/more_text"
                android:background="@color/actionbarcolour" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="2sp"
                android:layout_below="@+id/line0"
                android:background="@color/actionbarcolour" />

            <RelativeLayout
                android:id="@+id/setting_blog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_below="@+id/line">

                <TextView
                    android:text="Our Blog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginTop="15sp"
                    android:textSize="20sp"
                    android:id="@+id/blog_text" />

                <ImageView
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    app:srcCompat="@mipmap/rightarrow2"
                    android:layout_alignTop="@+id/blog_text"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/blog_select" />
            </RelativeLayout>
            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/setting_blog"
                android:background="@color/violet" />

            <RelativeLayout
                android:id="@+id/setting_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_below="@+id/line1">

                <TextView
                    android:text="Share the App"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20sp"
                    android:layout_marginTop="15sp"
                    android:id="@+id/share_text" />

                <ImageView
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    app:srcCompat="@mipmap/rightarrow2"
                    android:layout_alignTop="@+id/share_text"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/share_select" />


            </RelativeLayout>
            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/setting_share"
                android:background="@color/violet" />

            <RelativeLayout
                android:id="@+id/setting_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_below="@+id/line2">

                <TextView
                    android:text="Rate the App"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20sp"
                    android:layout_marginTop="15sp"
                    android:id="@+id/rate_text" />

                <ImageView
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    app:srcCompat="@mipmap/rightarrow2"
                    android:layout_alignTop="@+id/rate_text"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/rate_select" />
            </RelativeLayout>
            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/setting_rate"
                android:background="@color/violet" />
            <RelativeLayout
                android:id="@+id/setting_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_below="@+id/line3">

                <TextView
                    android:text="Terms &amp; Conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20sp"
                    android:layout_marginTop="15sp"
                    android:id="@+id/terms_text" />

                <ImageView
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    app:srcCompat="@mipmap/rightarrow2"
                    android:layout_alignTop="@+id/terms_text"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/terms_select" />

            </RelativeLayout>
            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/setting_terms"
                android:background="@color/violet" />

            <RelativeLayout
                android:id="@+id/setting_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_below="@+id/line4">

                <TextView
                    android:text="Privacy Policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20sp"
                    android:layout_marginTop="15sp"
                    android:id="@+id/policy_text" />

                <ImageView
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    app:srcCompat="@mipmap/rightarrow2"
                    android:layout_alignTop="@+id/policy_text"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/policy_select" />

            </RelativeLayout>
            <View
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/setting_policy"
                android:background="@color/violet" />

            <RelativeLayout
                android:id="@+id/setting_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_below="@+id/line5">

                <TextView
                    android:text="Logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginTop="15sp"
                    android:id="@+id/logout_text" />

                <ImageView
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    app:srcCompat="@mipmap/rightarrow2"
                    android:layout_alignTop="@+id/logout_text"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/logout_select" />

            </RelativeLayout>
            <View
                android:id="@+id/line6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/setting_logout"
                android:background="@color/violet" />
        </RelativeLayout>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/bottomlayout"
            android:layout_width="wrap_content"
            android:layout_height="65sp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/actionbarcolour"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/category_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/homeicon"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginTop="3dp"
                            android:background="@mipmap/home_icon_bw"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:id="@+id/hometext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Home"

                            android:layout_marginLeft="6sp"
                            android:textStyle="bold"
                            android:textColor="@color/counter_text_color"
                            android:textSize="12sp"
                            android:layout_below="@+id/homeicon"
                            android:fontFamily="sans-serif-condensed"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/category_mycamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18sp"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/mycampicon"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginTop="3dp"
                            android:background="@mipmap/mycampaign_bw"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />


                        <TextView
                            android:id="@+id/mycamptext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Campaigns"
                            android:textColor="@color/counter_text_color"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_below="@+id/mycampicon"
                            android:fontFamily="sans-serif-condensed"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/category_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18sp"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/walleticon"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginTop="3dp"
                            android:background="@mipmap/wallet_blr"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:id="@+id/wallettext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Wallet"
                            android:layout_marginLeft="3sp"
                            android:textColor="@color/counter_text_color"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_below="@+id/walleticon"
                            android:fontFamily="sans-serif-condensed"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/category_proflie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25sp"
                        android:layout_gravity="center">


                        <ImageView
                            android:id="@+id/profileicon"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginTop="3dp"
                            android:background="@mipmap/profile_icon_bl"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:id="@+id/profiletext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Profile"
                            android:textColor="@color/counter_text_color"
                            android:layout_marginLeft="4sp"
                            android:textSize="12sp"
                            android:layout_below="@+id/profileicon"
                            android:fontFamily="sans-serif-condensed"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/category_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25sp"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/moreicon"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginTop="3dp"
                            android:background="@mipmap/more_icon_bw"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:id="@+id/moretext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:textColor="@color/counter_text_color"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_below="@+id/moreicon"
                            android:fontFamily="sans-serif-condensed"/>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>

