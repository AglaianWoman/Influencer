<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivityOne">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@mipmap/background"
        android:scaleType="fitXY"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context=".RegistrationScreen1"
            android:layout_marginTop="15sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/relativeLayout"
            android:scaleType="fitXY">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="REGISTRATION"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:id="@+id/registration_title"
                android:layout_marginTop="5sp"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/registration_title"
                android:id="@+id/relativeLayout1"
                android:layout_centerHorizontal="true"
                android:background="@color/transperent"
                android:scaleType="fitXY">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Add Info to Create New Account"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/yellow"
                    android:gravity="center"
                    android:id="@+id/addinfo"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true" />

                <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:id="@+id/profileimage"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/addinfo"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/user_icon1"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:inputType="textPersonName|textCapWords"
                    android:hint="Name"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:ems="14"
                    android:gravity="left"
                    android:layout_marginTop="12dp"
                    android:layout_below="@+id/profileimage"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_corner"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="14"
                    android:id="@+id/email"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:hint="Email ID"
                    android:singleLine="true"
                    android:gravity="left"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_below="@+id/name"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_corner"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="14"
                    android:id="@+id/password"
                    android:hint="Password"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:singleLine="true"
                    android:gravity="left"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_below="@+id/email"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_corner"/>

                <ImageView
                    android:id="@+id/pass_visible"
                    android:clickable="true"
                    android:src="@mipmap/eye_icon_white"
                    android:layout_height="30sp"
                    android:layout_width="30sp"
                    android:visibility="invisible"
                    android:layout_marginBottom="5sp"
                    android:layout_alignBottom="@+id/password"
                    android:layout_alignRight="@+id/password"
                    android:layout_alignEnd="@+id/password"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="12dp" />

                <ImageView
                    android:id="@+id/pass_invisible"
                    android:clickable="true"
                    android:src="@mipmap/eye_icon_blue"
                    android:layout_height="30sp"
                    android:layout_width="30sp"
                    android:visibility="invisible"
                    android:layout_marginBottom="5sp"
                    android:layout_alignBottom="@+id/password"
                    android:layout_alignRight="@+id/password"
                    android:layout_alignEnd="@+id/password"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="12dp" />


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="14"
                    android:id="@+id/mobile"
                    android:hint="Mobile No"
                    android:singleLine="true"
                    android:gravity="left"
                    android:paddingLeft="15dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="12dp"
                    android:layout_below="@+id/password"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_corner"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:id="@+id/city"
                    android:hint="City"
                    android:ems="14"
                    android:gravity="left"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:layout_marginTop="12dp"
                    android:layout_below="@+id/mobile"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_corner"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/register_button"
                    android:layout_marginTop="12dp"
                    android:layout_below="@+id/city"
                    android:gravity="center"
                    android:text="REGISTER"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:background="@drawable/rounded_corner_button"
                    android:layout_alignLeft="@+id/city"
                    android:layout_alignStart="@+id/city"
                    android:layout_alignRight="@+id/city"
                    android:layout_alignEnd="@+id/city" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/register_button"
                    android:id="@+id/relativeLayout2"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/newuser"
                        android:text="Already have an account ? "
                        android:textColor="@color/ashe"
                        android:textSize="18sp"
                        android:layout_marginTop="5sp"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="SIGN IN"
                        android:textColor="@color/yellow"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:id="@+id/login"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/newuser"
                        android:layout_toEndOf="@+id/newuser" />
                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/linenew"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/relativeLayout1"
                android:background="#c0c0c0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/terms"
                android:textColor="@color/dark_ashe"
                android:textSize="11sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="25sp"
                android:layout_centerHorizontal="true"
                android:text="@string/register_terms"
                android:gravity="center"
                android:layout_below="@+id/linenew" />

        </RelativeLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>