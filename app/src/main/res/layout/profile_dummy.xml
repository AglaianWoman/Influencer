<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lite_ashe">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@color/lite_ashe"
                android:orientation="vertical"
                android:padding="5dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp">

                    <TextView
                        android:id="@+id/welcome_text_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="sans-serif"
                        android:text="Social Media"
                        android:gravity="center"
                        android:textColor="@color/orange"
                        android:textSize="30sp"
                        />

                    <LinearLayout
                        android:id="@+id/scmenu"
                        android:background="@color/lite_ashe"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/welcome_text_one"
                        android:layout_marginBottom="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginLeft="10sp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/facebook_clr"
                            android:layout_width="match_parent"
                            android:layout_height="70sp"
                            android:layout_below="@+id/cardview"
                            android:layout_marginTop="8sp"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/facebook_clr_icon"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:layout_marginTop="15sp"
                                android:layout_marginLeft="10sp"
                                android:background="@mipmap/facebook_r_icon" />

                            <TextView
                                android:id="@+id/facebook_handle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5sp"
                                android:layout_marginTop="25sp"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Facebook Handle"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:visibility="visible" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/scmenu1"
                        android:background="@color/lite_ashe"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/scmenu"
                        android:layout_marginBottom="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginLeft="10sp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/twitter_clr"
                            android:layout_width="match_parent"
                            android:layout_height="70sp"
                            android:layout_below="@+id/cardview"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/instagram_clr_icon"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:layout_marginTop="15sp"
                                android:layout_marginLeft="10sp"
                                android:background="@mipmap/twitter_r_icon" />

                            <TextView
                                android:id="@+id/twitter_handle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5sp"
                                android:layout_marginTop="25sp"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Twitter Handle"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:visibility="visible" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/scmenu2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/scmenu1"
                        android:gravity="center"
                        android:layout_marginBottom="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginLeft="10sp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/instagram_clr"
                            android:layout_width="match_parent"
                            android:layout_height="70sp"
                            android:layout_below="@+id/cardview"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/insta_clr_icon"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:layout_marginTop="15sp"
                                android:layout_marginLeft="10sp"
                                android:background="@mipmap/instagram_r_icon" />

                            <TextView
                                android:id="@+id/instagram_handle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5sp"
                                android:layout_marginTop="25sp"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Instagram Handle"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:visibility="visible" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/scmenu3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/scmenu2"
                        android:layout_marginRight="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginBottom="10sp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/blogger_clr"
                            android:layout_width="match_parent"
                            android:layout_height="70sp"
                            android:layout_below="@+id/cardview"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/blogger_clr_icon"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:layout_marginTop="15sp"
                                android:layout_marginLeft="10sp"
                                android:background="@mipmap/blogger_r_icon" />

                            <TextView
                                android:id="@+id/blogger_handle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5sp"
                                android:layout_marginTop="25sp"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Blogger Handle"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:visibility="visible" />


                        </LinearLayout>
                    </LinearLayout>
                <LinearLayout
                    android:id="@+id/scmenu4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/scmenu3"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginBottom="10sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/youtube_clr"
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:layout_below="@+id/cardview"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/youtube_clr_icon"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginTop="15sp"
                            android:layout_marginLeft="10sp"
                            android:background="@mipmap/youtube_r_icon" />

                        <TextView
                            android:id="@+id/youtube_handle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5sp"
                            android:layout_marginTop="25sp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Youtube Handle"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/add_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/scmenu4"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_corner_button"
                    android:text="   Add Account   "
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
                <!--</ScrollView>-->
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>